{
  "formats": [
    "oas3"
  ],
  "rules": {
    "monite-performance-rate-limiting": {
      "message": "Rate limiting should be supported",
      "severity": "warn",
      "given": "$.[responses][?(@property[0] == '2' )][headers]",
      "then": [
        {
          "functionOptions": {
            "properties": [
              "X-RateLimit-Limit",
              "RateLimit-Limit"
            ]
          },
          "function": "xor"
        },
        {
          "functionOptions": {
            "properties": [
              "X-RateLimit-Remaining",
              "RateLimit-Remaining"
            ]
          },
          "function": "xor"
        },
        {
          "functionOptions": {
            "properties": [
              "X-RateLimit-Reset",
              "RateLimit-Reset"
            ]
          },
          "function": "xor"
        }
      ]
    }
  }
}